<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<img id="comic">
<style>
  * {
    padding: 0;
    margin: 0;
  }
  body {
    background-color: black;
  }
  #comic {
    height: 100%;
    margin: 0 auto;
    display: block;
  }
</style>
<script>
var comic_page = 1;
function updatePage() {
  if (comic_page < 1) comic_page = 1;
  $("#comic").attr("src", "/image/girl-genius/"+comic_page);
}

$(window).on('keydown', function(e) {
  if (e.keyCode == 39) { // Right arrow
    comic_page += 1;
  } else if (e.keyCode == 37) { // Left arrow
    comic_page -= 1;
  }
  updatePage();
});
$(window).on('mousedown', function(e) {
  if (e.screenX > window.innerWidth/2) {
    comic_page += 1;
  } else {
    comic_page -= 1;
  }
  e.preventDefault();
  updatePage();
});
$("#comic").attr("src", "/image/girl-genius/"+comic_page);
</script>
